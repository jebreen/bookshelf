<%= form_with(model: genre) do |form| %>
  <% if genre.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(genre.errors.count, "error") %> prohibited this genre from being saved:</h2>

      <ul>
        <% genre.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description %>
  </div>

  <div class="field">
    <%= form.label :fiction %>
    <%= form.check_box :fiction %>
  </div>

  <div class="field">
    <%= form.label 'Subgenre of' %>
    <%= form.collection_select :genre_id, Genre.all, :id, :description, include_blank: 'None (top-level)'  %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
