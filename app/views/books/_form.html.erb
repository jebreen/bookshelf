      <h2><%= pluralize(book.errors.count, "error") %> prohibited this book from being saved:</h2>

      <ul>
        <% book.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :authors %>
    <%= form.select(:author_ids, Author.all.map{ |e| [e.name, e.id]}, { :include_blank => false }, {:multiple => true}) %>
  </div>

  <div class="field">
    <%= form.label :genre %>
    <%= form.select :genre_id, Genre.all.map{ |e| [e.description, e.id]}, {:include_blank => true} %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
